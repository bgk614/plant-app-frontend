<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="설정">
        <SwitchPreference
            android:key="sound"
            android:title="알림"/>

        <PreferenceCategory android:title="테마 선택">
            <Preference
                android:key="light_mode"
                android:title="라이트 모드"
                android:defaultValue="false" />
            <Preference
                android:key="dark_mode"
                android:title="다크 모드"
                android:defaultValue="true" />
        </PreferenceCategory>

    </PreferenceCategory>
</PreferenceScreen>