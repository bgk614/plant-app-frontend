<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".testActivity">


    <LinearLayout
        android:id="@+id/containerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/noPlantsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="식물 등록 방식을 선택해주세요."
            android:textColor="@color/blackText"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center" />

        <Button
            android:id="@+id/bringGalleryBtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="갤러리 가져오기"
            android:background="@color/black"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:contentDescription="@string/gallery_button_description"/>

        <Button
            android:id="@+id/PicAddBtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="직접 사진 찍기"
            android:background="@color/black"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:contentDescription="@string/PicAddBtnString"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


